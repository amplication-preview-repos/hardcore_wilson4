datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime @default(now())
  email     String?  @unique
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}

model Message {
  chatSession   ChatSession? @relation(fields: [chatSessionId], references: [id])
  chatSessionId String?
  content       String?
  createdAt     DateTime     @default(now())
  id            String       @id @default(cuid())
  timestamp     DateTime?
  updatedAt     DateTime     @updatedAt
}

model ChatSession {
  chatUser  String?
  createdAt DateTime  @default(now())
  endedAt   DateTime?
  id        String    @id @default(cuid())
  messages  Message[]
  startedAt DateTime?
  updatedAt DateTime  @updatedAt
}

model AiProvider {
  apiKey    String?
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  name      String?
  updatedAt DateTime @updatedAt
}

model ChatUser {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  updatedAt DateTime @updatedAt
}
